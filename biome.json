{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "coverage",
      ".next",
      ".yarn",
      "public",
      ".pnp.loader.mjs",
      ".pnp.cjs",
      "next-env.d.ts",
      "next.config.js",
      "components/legacy/icons",
      "app/manifest.json"
    ],
    "maxSize": 31457280
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "all": true,
        "useComponentExportOnlyModules": "off",
        "noCommonJs": "off",
        "useSortedClasses": "off",
        "noProcessEnv": "off",
        "useConsistentCurlyBraces": "off",
        "useImportRestrictions": "off",
        "useExplicitType": "off",
        "noSecrets": "off"
      },
      "correctness": {
        "all": true,
        "useExhaustiveDependencies": "off",
        "noUndeclaredDependencies": "off",
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useOptionalChain": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    },
    "ignore": [".next/", "node_modules/", "./**/*.json", "**/*.config.js", "**/*.config.mjs"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "ignore": [".next/", "node_modules/", "public/"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
