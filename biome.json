{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/coverage",
      "!**/.next",
      "!**/.yarn",
      "!**/public",
      "!**/.pnp.loader.mjs",
      "!**/.pnp.cjs",
      "!**/next-env.d.ts",
      "!**/next.config.js",
      "!**/components/legacy/icons",
      "!**/app/manifest.json"
    ],
    "maxSize": 31457280
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "off",
        "useExplicitType": "off",
        "noSecrets": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUndeclaredDependencies": "off",
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noUnknownAtRules": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "noNonNullAssertion": "off",
        "useComponentExportOnlyModules": "off",
        "noCommonJs": "off",
        "noProcessEnv": "off",
        "useConsistentCurlyBraces": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useOptionalChain": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    },
    "includes": ["**", "!**/.next/", "!**/node_modules/", "!**/*.json", "!**/*.config.js", "!**/*.config.mjs"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "includes": ["**", "!**/.next/", "!**/node_modules/", "!**/public/"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
