{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["node_modules", "dist", "coverage", ".next", ".yarn", "public", ".pnp.loader.mjs", ".pnp.cjs"],
    "maxSize": 31457280
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "all": true,
        "useComponentExportOnlyModules": "off",
        "noCommonJs": "off",
        "useSortedClasses": "off",
        "noProcessEnv": "off"
      },
      "correctness": {
        "all": true,
        "useExhaustiveDependencies": "off",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off",
        "noNodejsModules": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    },
    "ignore": [".next/", "node_modules/", "./**/*.json"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single"
    }
  }
}
